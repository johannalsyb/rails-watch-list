<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <a class="btn btn-flat" href="#">Create a new list</a>

        <%= simple_form_for @list do |f| %>
          <%= f.input :name, placeholder: 'Drama' %>
          <%= f.submit class: 'btn btn-primary' %> or
          <%= link_to 'Cancel', lists_path, class: 'text-danger' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
